@model List<BookedAppointmentViewModel>

@{
	ViewData["Title"] = "Index";
}

<div class="pt-2 ml-4 pl-3 mb-4">
	<h1>Booked Appointments</h1>
</div>

<div class="container-fluid" style="width: 95%">
	<div class="row">
		<div class="col-md-12">
			@foreach (var @item in Model)
			{
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								<img id="profilePicture" style="width:285px;height:300px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(@item.DoctorImage))">
							</div>
							<div class="col-4 ml-4">
								<h3 class="row ml-3">
									Doctor Name
								</h3>
								<div class="row mb-4 ml-3">
									@item.DoctorName
								</div>
								<h3 class="row ml-3">
									Doctor Specialty
								</h3>
								<div class="row mb-4 ml-3">
								@item.Specialty
								</div>
								<h3 class="row ml-3">
									Highest Medical Degree
								</h3>
								<div class="row mb-4 ml-3">
								@item.HighestMedicalDegree
								</div>
							</div>
							<div class="col-4">
								<h3 class="row ml-3">
									Appointment Request
								</h3>
								<div class="row mb-2 ml-3">
								@Html.Raw(@item.Title)
								</div>
								<h3 class="row ml-3">
									Booked Date
								</h3>
								<div class="row mb-4 ml-3">
								@item.BookedDate
								</div>
								<h3 class="row ml-3">
									Appointment Date
								</h3>
								<div class="row mb-4 ml-3">
								@item.DateOfAppointment
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
