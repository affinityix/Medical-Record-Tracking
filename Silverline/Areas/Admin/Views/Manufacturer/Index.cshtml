@{
    ViewData["Title"] = "Manufacturer";
}

<partial name="_Notification" />

<h1>Manufacturer Index</h1>

<div class="row mb-3">
    <div class="col-6">
        <h2 class="text-primary">List of Manufacturers</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Add a new Manufacturer</a>
    </div>
</div>

<div class="p-2 border rounded">
    <table id="tableData" class="table table-striped table-bordered" style="width:100%">
        <thead class="mt-2">
            <tr class="table-info">
                <th class="text-center">Manufacturers</th>
                <th class="text-center">Location</th>
                <th class="text-center">Activation Status</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
        <script src="~/js/manufacturer.js"></script>
}

