@{
    ViewData["Title"] = "Medicine";
}

<partial name="_Notification" />

<h1>Medicine Index</h1>

<div class="row mb-3">
    <div class="col-6">
        <h2 class="text-primary">List of Medicine</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Medicine</a>
    </div>
</div>

<div class="p-2 border rounded">
    <table id="tableData" class="table table-striped table-bordered" style="width:100%">
        <thead class="mt-2">
            <tr class="table-info">
                <th class="text-center">Medicine Title</th>
                <th class="text-center">Unit Price</th>
                <th class="text-center">Type</th>
                <th class="text-center">Category</th>
                <th class="text-center">Manufacturer</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/medicine.js"></script>
}

